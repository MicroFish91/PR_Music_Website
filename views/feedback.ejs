<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ('partials/structure/head.ejs') %>
</head>
<body>
  <div class="container">
    <header>
      <%- include ('partials/content/nav.ejs') %>
    </header>
    
    <div class="push-down"></div>

    <div class="feedback-container">
      <form class="feedback-form" type="submit" method="POST" action="/feedback">
        <div class="form-title">Feedback Form</div>
        <label for="username">Name: </label> <br>
        <input name="username" placeholder="Your username.." type="text" required > <br>
        <label for="album">Album: </label> <br>
        <select class="album-dropdown" name="album">
          <% for( let i = 0; i < albums.length; i++ ) { %>
            <option value="<%= albums[i].shortname %> "><%= albums[i].albumname %> </option>
          <% } %>
        </select> <br>
        <label for="username">Review: </label> <br>
        <textarea name="message" placeholder="Leave your review here.." rows="4" cols="50"></textarea> <br>
        <div class="button-wrapper">
          <button type="submit">Submit</button>
        </div>
      </form>
    </div>

  </div>

  <script src="/js/feedback.js"></script>
</body>
</html>